<div class="profile">
    <div class="photo">
      <img src="https://cdn0.iconfinder.com/data/icons/iconshock_guys/512/andrew.png" >
      <p>{{user.firstName}} {{user.lastName}}</p>
      {{# if countFriends}}
        <i>Friends: {{countFriends}}</i>
      {{else}}
        <i>Friends: 0</i>
      {{/if}}
    </div>
    <div class="profile-wall">
      <div class="addProfilePost">
        <textarea id="postTextArea" name="postTextArea" placeholder="Opublikuj coÅ› ..."></textarea>
        <button id="addPost" type="submit" class="postBtn blue" name="add-post">Add post</button>
      </div>
      <div class="profilePosts">
        {{# if posts}}
        {{# each posts }}
          {{# if isShared}}
            <div class="profilePost isShared">
          {{else}}
            <div class="profilePost">
          {{/if}}
            <div class="postAuthor">
              <img src="https://cdn0.iconfinder.com/data/icons/iconshock_guys/512/andrew.png" >
              {{# if isShared}}
                <p>{{sharedByWho.firstName}} {{sharedByWho.lastName}} > {{author.firstName}} {{author.lastName}}</p>
              {{else}}
                <p>{{author.firstName}} {{author.lastName}}</p>
              {{/if}}

            </div>
            <div class="profilePostText">
              {{ text }}
            </div>
            <div class="profilePostOptions" id="profilePostOptions">
              {{# if isLiked}}
                <i><button class="fa fa-heart liked" aria-hidden="true" id="likePost" value="{{id}}"> Like</button></i> |
              {{else}}
                <i><button class="fa fa-heart" aria-hidden="true" id="likePost" value="{{id}}"> Like</button></i> |
              {{/if}}
              {{# if isShared}}
                <i><button class="fa fa-share" aria-hidden="true" id="sharePost" value="{{originalPostId}}"> Share it</button></i>
                <i class="profilePostTime"> {{formatDate time }} </i>
              {{else}}
                <i><button class="fa fa-share" aria-hidden="true" id="sharePost" value="{{id}}"> Share it</button></i>
                <i class="profilePostTime"> {{formatDate time }} </i>
              {{/if}}




            </div>
          </div>

        {{/each}}
        {{else}}
          <div class="profilePost" id="profilePost">
            <h1> No posts yet! Add some or add friends to see posts! ;)</h1>
          </div>
        {{/if}}
      </div>
    </div>
</div>


<div class="friendsBox">
  <ul id="friendsList">
    {{# if countFriends}}
      <li id="allFriends"> All friends <i>{{countFriends}}</i></li>
      {{# each friends}}
        <li class="friendUsername" data-user="{{username}}">{{firstName}} {{lastName}}</li>
      {{/each}}
    {{/if}}
  </ul>
</div>



<div class="chatBoxes" id="chatBoxes">

</div>


<div id="notificationsBox" class="notificationsBox">

</div>
